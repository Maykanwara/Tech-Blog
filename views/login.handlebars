<div class="row">
    <div class="col-md-6"></div>
    <h2>Login</h2>

    <form class="form login-form">
    <div class="form-group">
        <label for="email-login">email</label>
        <input class="form-input" type="text" id="email-login" />
    </div>

     <div class="form-group">
        <label for="password-login">password</label>
        <input class="form-input" type="password" id="password-login" autocomplete="on" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary" id="loginBtn type="submit">login</button>
    </div>
    </form>
    </div>
    <div class="col-md-6">
        <h2>Signup</h2>


    <form class="form signup-form">
        <div class="form-group">
        <label for="first-name-signup">First Name</label>
        <input class="form-input" name="first_name" type="text"  id="first-name-signup" />
    </form>
    </div>
    
   
        <div class="form-group">
        <label for="last-name-signup">Last Name</label>
        <input class="form-input" name="last_name" type="text"  id="last-name-signup" />
    </div>


    
        <div class="form-group">
        <label for="display-name-signup">Username</label>
        <input class="form-input" name="display_name" type="text"  id="display-name-signup" />
    </div>

    
        <div class="form-group">
        <label for="email-signup">Email</label>
        <input class="form-input" type="text"  id="email-signup" />
    </div>


        <div class="form-group">
        <label for="password-signup">Password</label>
        <input class="form-input" type="password"  id="password-signup" autocomplete="off" />
    </div>


    <div class="form-group">
        <button class="btn btn-primary" id="signupBtn type="submit">signup</button>
    </div>
    </form>
    </div>
</div>












